<!DOCTYPE html>

<%= button_to "New Guest", new_guest_path, :method => :get %>

<%= form_tag(guests_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Guests", :style => "text-align: Center" %><br>
<%= submit_tag "Search" %>
<% end %>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Locker</th>
      <th>Nights</th>
      <th>Price</th>
      <th>Deposit</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.reverse.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.locker %></td>
        <td><%= guest.nights %></td>
        <td><%= guest.price %></td>
        <td><%= guest.deposit %></td>
        <td><%= guest.note %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
