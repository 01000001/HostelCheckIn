<!DOCTYPE HTML>

<div style="float: middle;">
<%= form_tag(bookings_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Bookings", :style => "text-align: Center" %>

<%= submit_tag "Search", :class =>"btn btn-default btn-lg" %>
</div>
<% end %>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Check in date</th>
      <th>Check out date</th>
      <th>Guest</th>
      <th>Room</th>
      <th>Bed</th>
      <th>Status</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.reverse.each do |booking| %>
      <tr>
        <td><%= booking.check_in_date.strftime("%Y-%m-%d, %H:%M")  %></td>
        <td><%= booking.check_out_date.strftime("%Y-%m-%d, %H:%M") %></td>
        <td><%= booking.guest.name %></td>
        <td><%= booking.bed.room %></td>
        <td><%= booking.bed.number %></td>
        <td><%= booking.status%></td>
        <td><%= booking.guest.price%></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
