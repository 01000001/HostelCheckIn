<table class="table table-hover">
  <thead>
    <tr>
      <th>Check in date</th>
      <th>Check out date</th>
      <th>Guest</th>
      <th>Room</th>
      <th>Bed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.check_in_date.strftime("%Y %B %d, %H:%M") %></td>
        <td><%= booking.check_out_date.strftime("%Y %B %d, %H:%M") %></td>
        <td><%= booking.guest.name %></td>
        <td><%= booking.bed.room %></td>
        <td><%= booking.bed.number %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
