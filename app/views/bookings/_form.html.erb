<!DOCTYPE html>

<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :check_in_date %><br>
    <%= f.datetime_select :check_in_date %>
  </div>
  
  <div class="field">
    <%= f.label :check_out_date %><br>
    
    <!--The following if statement checks if the user is redirected from the create_user page, in this case, the default value of the
    check_out_date is going to be the date today + the number of days the guest is going to stay-->
    <% if defined? notice.id == "method" %>
    		<% selected_guest = Guest.find_by_id(notice.id) %>
    		<%= f.datetime_select :check_out_date, default: selected_guest.nights.days.from_now %>
    	<% else %>
    		<%= f.datetime_select :check_out_date, default: 1.days.from_now %>
    <% end %>
    <!-- f.date_select :check_out_date, :order => [:day, :month, :year] -->
    <!-- f.text_field :check_out_date, value: Date.today.strftime('%d-%m-%Y'), class: "datepicker" -->
  </div>
  <div class="field">
    <%= f.label :guest_id %><br>
    
    <!--The following if statement checks if the user is redirected from the create_user page, in this case, the default value of thea
    guest field is going to be the just before created guest's name-->
    <% if defined? notice.id == "method" %>
		  <% selected_guest = Guest.find_by_id(notice.id) %>
		  <%= selected_guest.name %><br>
		  <%= f.hidden_field :guest_id, :value => selected_guest.id, :readonly => true %>
    <!-- f.collection_select(:guest_id, Guest.all, :id, :name, :selected => Guest.all.map(&:id)) -->
    <% else %>
    		<%= f.collection_select(:guest_id, Guest.all, :id, :name) %>
    <% end %>
  </div>
  
  <!--Original bed_id field
  <div class="field">
    <%= f.label :bed_id %><br>
    <%= f.text_field :bed_id %>
  </div>
  -->
  
  <div class="field">
    <%= f.label :bed_id %><br>
    
    <!--Find all beds that hasn't booked yet-->
    
    <!Date has to be added here>
    
    <!--Find all active bookings-->
    <% beds_checked_out = Booking.where('check_out_date > ? AND id < ?', Date.today, 1000)%>
    
    
    <%= beds_checked_out %>
    
    <%= @beds %>
    <% @beds_not_occupied = Bed.includes(:bookings).where(bookings: {bed_id: nil}) %>

    <%= f.collection_select(:bed_id, @beds_not_occupied, :id, :bed_label, :prompt => "Select a Bed") %>
  </div>
  
  <div class="field">
    <%= f.label :shift %><br>
    <%= f.select(:shift, ["AM","PM","NIGHT"], :prompt => "Select") %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<input type="text" data-behaviour='datepicker' >


<script type="text/javascript">

  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker({ dateFormat: 'yy-mm-dd' });
    $('.datepicker').datepicker();
    
    $("#datepicker").datepicker({
            dateFormat:'mm/dd/yy'
        });
  })
</script>
