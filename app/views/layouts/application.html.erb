<!DOCTYPE html>
<html>
<head>
  <title>Bobs</title>
  
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse" role="navigation">
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Bobs</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to 'Beds', beds_url %></li>
          <li><%= link_to 'Guests', guests_url %></li>
          <li><%= link_to 'Bookings', bookings_url %></li>
          <li><%= link_to "Total", total_url %></li>
          
        </ul>
        <div style="float: right;" class="show_time">
        <%= link_to "<", :controller => "beds", :action => "decrease_date" %>
        
        <% @time_variable = Date.today.strftime("%Y %B %d, %A") %>
        
        <% if defined?(:alert) && !alert.nil? %>
				<%= @time_variable = alert.strftime("%Y %B %d, %A") %>
				<% else %>
        
        <% @time_variable = session[:date_variable].strftime("%Y %B %d, %A") %>
				
        <%= @time_variable %>
        <% end %>
        
        <%= link_to ">", :controller => "beds", :action => "increase_date" %>
        </div>
      </div>
    </div>
  </div>
</div>
</nav>
<br>
<br>

<div class="main_division">
<%= yield %>
</div>

<script>
	var v="<%= @time_variable %>"
	fun = function(){console.log('this is fun')};
	d = function(){console.log(v)};
	$(document).ready(function(){
      fun();
     	d();
    });
</script>

</body>
</html>
